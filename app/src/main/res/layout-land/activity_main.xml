<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">  <ImageView
    android:id="@+id/imageView2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/background_2025316" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#90000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:gravity="end|center_vertical"
            android:minHeight="60dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_dive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/main_btn"
                android:text="@string/dive"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/del"
                android:textSize="20sp" />


            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_mult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/main_btn"
                android:text="@string/mult"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/main_btn"
                android:text="@string/minus"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/main_btn"
                android:text="@string/equals"
                android:textSize="25sp" />


            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/btn_dot"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/usual_btn"
                android:text="@string/plus"
                android:textSize="25sp" />

        </GridLayout>

    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>